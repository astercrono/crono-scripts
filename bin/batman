#!/usr/bin/env bash

source "$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )/../lib/configure.sh"
source "$CSCRIPT_LIB/batlib.sh"

plaintext=false
show_usage=false

while getopts "ph" opt; do
    case $opt in
        p)
            plaintext=true
            ;;
        h)
            show_usage=true
            ;;
        *)  ;;
    esac
done
shift $(($OPTIND - 1))

if $show_usage; then
    if $plaintext; then
        bat_usage | unfancy
    else
        bat_usage
    fi
    exit 0
fi

for p in "$@"; do
    RUN_PATHS+=("${p// /$CSCRIPT_SPACE_ENCODE}")
done

bat_banner

if $plaintext; then
    (bat_run_tests; bat_summary) | unfancy
    # bat_summary | unfancy
else
    bat_run_tests
    bat_summary
fi


exit $BAT_STATUS